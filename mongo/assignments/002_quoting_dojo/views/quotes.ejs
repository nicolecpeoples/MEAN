<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title></title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
    	<div class="container">
    		<h2> Here are some awesome quotes! </h2>
    		<% for (var i in quotes) { %>
    			<div class="quote">
    				<p><%= quotes[i].quote %></p>
    				<p><%= quotes[i].username %> <%=  moment(quotes[i].created).format('Do MMMM, YYYY'); %> </p>
    				<p> <%= quotes[i].likes %> Likes</p>
    				<a href="/like/<%= quotes[i]._id %>"> Like </a>
    			</div>	
    			<hr>


    		<% } %>
    		<a href="/" class="btn btn-primary"> Add more Quotes! </a>
    	</div>
    </body>
</html>